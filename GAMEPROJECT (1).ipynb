   "source": [
    "from tkinter import *\n",
    "import random\n",
    "\n",
    "# Initialize scores\n",
    "user_score = 0\n",
    "computer_score = 0\n",
    "\n",
    "# Function to determine the computer's choice\n",
    "def computer_choice():\n",
    "    return random.choice(['Rock', 'Paper', 'Scissors'])\n",
    "\n",
    "# Function to determine the winner\n",
    "def determine_winner(user, computer):\n",
    "    global user_score, computer_score\n",
    "    if user == computer:\n",
    "        return \"It's a tie!\"\n",
    "    elif (user == 'Rock' and computer == 'Scissors') or \\\n",
    "         (user == 'Scissors' and computer == 'Paper') or \\\n",
    "         (user == 'Paper' and computer == 'Rock'):\n",
    "        user_score += 1\n",
    "        return \"You win!\"\n",
    "    else:\n",
    "        computer_score += 1\n",
    "        return \"Computer wins!\"\n",
    "\n",
    "# Function to play a round of Rock-Paper-Scissors\n",
    "def play_round(user_choice):\n",
    "    comp_choice = computer_choice()\n",
    "    result = determine_winner(user_choice, comp_choice)\n",
    "    result_label.config(text=f\"Your choice: {user_choice}\\nComputer's choice: {comp_choice}\\nResult: {result}\")\n",
    "    score_label.config(text=f\"Your Score: {user_score}  Computer's Score: {computer_score}\")\n",
    "\n",
    "# Function to reset the game\n",
    "def reset_game():\n",
    "    global user_score, computer_score\n",
    "    user_score = 0\n",
    "    computer_score = 0\n",
    "    result_label.config(text=\"\")\n",
    "    score_label.config(text=\"Your Score: 0  Computer's Score: 0\")\n",
    "\n",
    "# Create the main window\n",
    "w = Tk()\n",
    "w.title(\"Rock-Paper-Scissors Game\")\n",
    "\n",
    "# Create labels, buttons and result display\n",
    "h1 = Label(w, text=\"Choose Rock, Paper or Scissors:\", borderwidth=5, relief=\"raise\", bg=\"aqua\",width=50, height=3)\n",
    "h1.grid(row=1, column=1, columnspan=7)\n",
    "\n",
    "h2 = Button(w, text=\"Rock\", command=lambda: play_round('Rock'), borderwidth=5, bg=\"yellow\",width=15, height=2)\n",
    "h2.grid(row=2, column=1, columnspan=2)\n",
    "\n",
    "h3 = Button(w, text=\"Paper\", command=lambda: play_round('Paper'), borderwidth=5, bg=\"Red\",width=15, height=2)\n",
    "h3.grid(row=2, column=3, columnspan=2)\n",
    "\n",
    "h4 = Button(w, text=\"Scissors\", command=lambda: play_round('Scissors'), borderwidth=5, bg=\"green\",width=15, height=2)\n",
    "h4.grid(row=2, column=5, columnspan=3)\n",
    "\n",
    "result_label = Label(w, text=\" \")\n",
    "result_label.grid(row=3, column=2, columnspan=3)\n",
    "\n",
    "score_label = Label(w, text=\"Your Score: 0  Computer's Score: 0\", borderwidth=5, relief=\"raise\", bg=\"aqua\",width=50, height=3)\n",
    "score_label.grid(row=4, column=1, columnspan=6)\n",
    "\n",
    "h7 = Button(w, text=\"Play Again\", command=reset_game, borderwidth=5, bg=\"yellow\",width=30, height=2)\n",
    "h7.grid(row=5, column=2, columnspan=4)\n",
    "\n",
    "# Run the Tkinter event loop\n",
    "w.mainloop()\n"
   ]
